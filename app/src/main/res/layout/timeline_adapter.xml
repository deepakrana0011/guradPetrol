<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayoutHelping">
            <View android:layout_width="@dimen/dp_one"
                android:layout_height="match_parent"
                android:id="@+id/view"
                android:background="@color/lightGray"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/imageViewCircleDot"
                android:layout_width="@dimen/dp_tweleve"
                android:layout_height="@dimen/dp_tweleve"
                android:src="@drawable/bg_red_circle" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_tweleve"
            android:layout_marginTop="-5dp"
            android:layout_toRightOf="@+id/relativeLayoutHelping"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_twenty_four">

            <TextView
                android:id="@+id/checkPointName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:includeFontPadding="false"
                android:text="Check Point 01:Front Floor"
                android:textSize="@dimen/sp_sixteen" />

            <LinearLayout
                android:id="@+id/linearLayoutScan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_four"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewQR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_qr_black" />

                <TextView
                    android:id="@+id/textViewScanTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_tweleve"
                    android:fontFamily="@font/roboto_regular"
                    android:text="NFC | 11:05 PM | 2 Mar 2019 | Checkpoint Sucessful"
                    android:textSize="@dimen/sp_ten" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutNfc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_four"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewNFC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_nfc_black" />

                <TextView
                    android:id="@+id/textViewNFCTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_tweleve"
                    android:fontFamily="@font/roboto_regular"
                    android:text="NFC | 11:05 PM | 2 Mar 2019 | Checkpoint Sucessful"
                    android:textSize="@dimen/sp_ten" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayoutIncident"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textIncidentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/roboto_regular"
                    android:text="NFC | 11:05 PM | 2 Mar 2019 | Checkpoint Sucessful"
                    android:textSize="@dimen/sp_ten" />

                <TextView
                    android:id="@+id/textIncidentAction"
                    android:layout_width="@dimen/dp_eighty"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_bg_blue_eight_dp_round"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/dp_eight"
                    android:padding="@dimen/dp_eight"
                    android:text="@string/view_text"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_ten"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textMessageTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/roboto_regular"
                    android:text="NFC | 11:05 PM | 2 Mar 2019 | Checkpoint Sucessful"
                    android:textSize="@dimen/sp_ten" />

                <TextView
                    android:id="@+id/textMessageAction"
                    android:layout_width="@dimen/dp_eighty"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_bg_green_dp_round"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/dp_eight"
                    android:padding="@dimen/dp_eight"
                    android:text="@string/view_text"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_ten"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutStartEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_four"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewStartEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/roboto_regular"
                    android:text="NFC | 11:05 PM | 2 Mar 2019 | Checkpoint Sucessful"
                    android:textSize="@dimen/sp_ten" />


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>